{
    "name": "doofinder/doofinder-magento2",
    "description": "Doofinder module for Magento 2",
    "require": {
        "php": "~5.5.0|~5.6.0|~7.0.0",
        "magento/magento-composer-installer": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "eviweb/fuelphp-phpcs": "*",
        "phpmd/phpmd": "@stable",
        "magento-ecg/coding-standard": "2.*"
    },
    "type": "magento2-module",
    "version": "1.0.0-beta",
    "license": [
        "OSL-3.0",
        "AFL-3.0"
    ],
    "autoload": {
        "files": [ "registration.php" ],
        "psr-4": {
            "Doofinder\\Feed\\": "",
            "Magento\\Framework\\": "/var/www/html/lib/internal/Magento/Framework/",
            "Magento\\Setup\\": "/var/www/html/setup/src/Magento/Setup/"
        }
    },
    "scripts": {
        "build": [
            "@phpcs",
            "@phpmd",
            "@phpcpd",
            "@phpunit"
        ],
        "phpcs": "php ./vendor/bin/phpcs --config-set installed_paths ../../magento-ecg/coding-standard && php ./vendor/bin/phpcs --standard=EcgM2 --report=checkstyle --report-file=./reports/phpcs.checkstyle.xml --ignore=vendor/* ./ || true",
        "phpmd": "php ./vendor/bin/phpmd ./ xml cleancode,codesize,design,naming,unusedcode --reportfile ./reports/phpmd.pmd.xml --exclude=vendor/* || true",
        "phpcpd": "php ./vendor/bin/phpcpd --log-pmd=./reports/phpcpd.cpd.xml --min-tokens=50 --min-lines=5 --exclude=vendor -n -q ./ || true",
        "phpunit": "/bin/bash -c 'cd $MAGENTO_PATH && composer install' && php $MAGENTO_PATH/vendor/bin/phpunit -c $MAGENTO_PATH/dev/tests/unit/phpunit.xml.dist --coverage-clover ./reports/clover.xml --log-junit ./reports/phpunit.junit.xml Test/Unit"
    },
    "extra": {
        "magento-root-dir": "/var/www/html",
        "magento-deploystrategy": "copy"
    }
}

