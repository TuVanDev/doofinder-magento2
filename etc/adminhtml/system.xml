<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="doofinder_feed"
            translate="label"
            sortOrder="1000">
            <label>Doofinder feed</label>
        </tab>
        <section id="doofinder_feed_feed"
            translate="label"
            type="text"
            sortOrder="1"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1">
            <label>Product Data Feed</label>
            <tab>doofinder_feed</tab>
            <resource>Doofinder_Feed::config</resource>
            <group id="feed_attributes"
            translate="label"
            type="text"
            sortOrder="1"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1">
                <label>Feed Attributes</label>
                <field id="id"
                    translate="label"
                    type="select"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>ID</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="title"
                    translate="label"
                    type="select"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Title</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="description"
                    translate="label"
                    type="select"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Description</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="brand"
                    translate="label"
                    type="select"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Brand</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="link"
                    translate="label"
                    type="select"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Link</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="image_link"
                    translate="label"
                    type="select"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Image link</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="price"
                    translate="label"
                    type="select"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Price</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="mpn"
                    translate="label"
                    type="select"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>MPN</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="availability"
                    translate="label"
                    type="select"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Availability</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="currency"
                    translate="label"
                    type="select"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Currency</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="additional_attributes"
                    translate="label"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Additional Attributes</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\Map\Additional</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
            </group>
            <group id="feed_settings"
                translate="label"
                type="text"
                sortOrder="2"
                showInDefault="1"
                showInWebsite="1"
                showInStore="1">
                <label>Feed Settings</label>
                <field id="export_proudct_prices"
                    translate="label"
                    type="select"
                    sortOrder="2"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Export Product Prices</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="split_configurable_products"
                    translate="label"
                    type="select"
                    sortOrder="2"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Split Configurable Products</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[
                        Export each component of a configurable product separately, instead of exporting them as a single product.
                        ]]>
                    </comment>
                </field>
                <field id="image_size"
                    translate="label"
                    type="text"
                    sortOrder="2"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Image size</label>
                    <comment>
                        <![CDATA[Export product image with given width. Leave empty to use original size.]]>
                    </comment>
                </field>
            </group>
            <group id="feed_cron"
                   translate="label"
                   type="text"
                   sortOrder="3"
                   showInDefault="1"
                   showInStore="1"
                   showInWebsite="1">
                <label>Feed Cron</label>
                <field id="enabled"
                       translate="label"
                       type="select"
                       sortOrder="1"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[ Activate/deactivate the feed for this store ]]>
                    </comment>
                </field>
                <field id="start_time"
                       translate="label"
                       type="time"
                       sortOrder="2"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Feed generation start time</label>
                    <comment>
                        <![CDATA[ The time at which the feed generation starts.]]>
                    </comment>
                </field>
                <field id="frequency"
                       translate="label"
                       type="select"
                       sortOrder="3"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Frequency</label>
                    <source_model>Magento\Cron\Model\Config\Source\Frequency</source_model>
                    <backend_model>Doofinder\Feed\Model\Config\Backend\Cron</backend_model>
                    <comment>
                        <![CDATA[
                        Feed generating frequency (e.g. "monthly" means that the feed will be generated on the first day of each month at a given hour).
                        ]]>
                    </comment>
                </field>
                <field id="step_size"
                       translate="label"
                       type="text"
                       sortOrder="4"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Step size</label>
                    <comment>
                        <![CDATA[
                        The maximum number of products added to the feed on each iteration of the generation process (maximum recommended value: 1000)
                        ]]>
                    </comment>
                </field>
                <field id="step_delay"
                       translate="label"
                       type="text"
                       sortOrder="3"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Step delay</label>
                    <comment>
                        <![CDATA[
                         The interval (in minutes) between subsequent stages of the feed generation process.
                         It should not be smaller than the frequency of execution of your cron.sh file.
                         ]]>
                    </comment>
                </field>
                <field id="generate"
                       translate="button_label"
                       sortOrder="62"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <button_label>Start Feed Generation Now</button_label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\GenerateButton</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>
